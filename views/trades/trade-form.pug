extends ../layout

block content
  div(class="d-flex flex-row content mx-auto")
    div(class="profile-container")
      include ../includes/profile
    div(class="flex-fill")
      form(class="card" method="post" action="/api/trades")
        div(class="card-header") Ã‰crire un trade
        div(class="card-body")
          div(class="mb-3")
            textarea(class="form-control" name="content" placeholder="What is happening")
          if errors
            ul(class="my-2")
              each error in errors
                li(class="text-danger")= error
          div(class="w-100")
            input(type="submit" value="Send" class="btn btn-primary ms-auto d-block")
            div(class="form-group")
              label(for="image") Image
              input(type="file" name="image" class="image-Trade")